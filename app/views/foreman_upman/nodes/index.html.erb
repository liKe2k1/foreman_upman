<% title _("Nodes") %>

<table class="<%= table_css_classes 'table-fixed' %>">
  <thead>
  <tr>
    <th><%= sort :hostname, :as => s_("Host")  %></th>
    <th><%= sort :operatingsystem, :as => s_("Distribution")  %></th>
    <th><%= sort :operatingsystemrelease, :as => s_("Version")  %></th>
    <th class="col-md-1"><%= _("Actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% for node in @nodes %>
    <tr>
      <td class='ellipsis'><%= link_to_if_authorized node.hostname, {:action => :show, :id => node}, :title => node.hostname %></td>
      <td><%= h node.operatingsystem %></td>
      <td><%= h node.operatingsystemrelease%></td>
      <td></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate_with_info @nodes, :more => " - "+_("<b class='select_count'>0</b> selected") %>