<%= form_for @channel, as: :channel, url: (@channel.new_record? ? channels_path : channel_path(@channel)) do |f| %>
  <%= base_errors_for @channel %>

  <%= text_f f, :name, required: true, help_inline: _('Channel-Name') %>
  <%= text_f f, :label, required: true, help_inline: _('Channel-Label') %>
  <%= text_f f, :base_url, required: true, help_inline: _('Base URL') %>
  <%= selectable_f f, :architecture, ForemanUpman::Channel::ARCHITECTURES %>
  <%= selectable_f f, :repository_checksum_type, ForemanUpman::Channel::CHECKSUM_TYPES %>
  <%= submit_or_cancel f %>
<% end %>

